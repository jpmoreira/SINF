@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Login/_login_Layout.cshtml";
}

@model SINF_App.Models.Login

<div class="panel-body">
    @if (@ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Warning!</strong> @ViewBag.ErrorMessage
        </div>
    }
        
    

    

    <div class="container">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "Home", new { @class = "form-horizontal", role = "form" }))
        {
            @*Username*@
            <div class="form-group row">
                @Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-2" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control", id = "lblUser" })
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>

            @*Password*@
            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", type = "password", @class = "form-control", id = "lblPassword" })
                    @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>

            @*Company*@
            <div class="form-group row">
                @Html.LabelFor(m => m.Company, new { @class = "control-label col-sm-2" })
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.Company, new { placeholder = "Company", @class = "form-control", id = "lblCompany" })
                    @Html.ValidationMessageFor(m => m.Company)
                </div>
                </div>

            <button type="submit" id="login_submit" class="btn btn-default" onclick="">Submit</button>
        }

    </div>
</div> @*panel-body*@

