    <meta name="description" content="">
    <meta name="author" content="DJRV">
    <link rel="icon" href="../../favicon.ico">

    <title>Better Delivery and Check</title>


    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/css")
